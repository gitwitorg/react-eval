{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}